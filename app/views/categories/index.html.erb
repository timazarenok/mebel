<div class="furniture-page">
  <p id="notice"><%= notice %></p>

  <h1 class="form-title">Категории</h1>

  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col">ID</th>
        <th scope="col">Имя</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @categories.each do |category| %>
        <tr>
          <td><%= category.id %></td>
          <td><%= category.name %></td>
          <td><%= link_to 'Показать', category, class: "btn btn-primary" %></td>
          <td><%= link_to 'Редактировать', edit_category_path(category), class: "btn btn-primary" %></td>
          <td><%= link_to 'Удалить', category, method: :delete, data: { confirm: 'Вы уверены?' }, class: "btn btn-primary" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Создать категорию', new_category_path, class: "btn btn-primary" %>
</div>