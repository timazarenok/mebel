<p id="notice"><%= notice %></p>

<h1>Категории</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">Имя</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= link_to 'Показать', category %></td>
        <td><%= link_to 'Редактировать', edit_category_path(category) %></td>
        <td><%= link_to 'Удалить', category, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Создать категорию', new_category_path, class: "btn btn-primary" %>
