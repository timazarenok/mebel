<div class="furniture-page">
  <p id="notice"><%= notice %></p>

  <h1 class="form-title">Производители</h1>

  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col">ID</th>
        <th scope="col">Имя</th>
        <th scope="col">Адрес</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @manufacturers.each do |manufacturer| %>
        <tr>
          <td><%= manufacturer.id %></td>
          <td><%= manufacturer.name %></td>
          <td><%= manufacturer.address %></td>
          <td><%= link_to 'Показать', manufacturer, class: "btn btn-primary" %></td>
          <td><%= link_to 'Редактировать', edit_manufacturer_path(manufacturer), class: "btn btn-primary" %></td>
          <td><%= link_to 'Удалить', manufacturer, class: "btn btn-primary", method: :delete, data: { confirm: 'Вы уверены?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Новый производитель', new_manufacturer_path, class: "btn btn-primary" %>
</div>