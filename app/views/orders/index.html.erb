<p id="notice"><%= notice %></p>

<h1>Заказы</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Пользователь</th>
      <th scope="col">Дата</th>
      <th scope="col">Товар</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.user_id %></td>
        <td><%= order.date %></td>
        <td><%= order.furniture_id %>
        <td><%= link_to 'Показать', order %></td>
        <td><%= link_to 'Редактировать', edit_order_path(order) %></td>
        <td><%= link_to 'Удалить', order, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Новый заказ', new_order_path, class: "btn btn-primary" %>
